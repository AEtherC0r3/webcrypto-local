{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "importHelpers": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "packages/*/build/**/*.d.ts",
        "build/**/*.d.ts"
    ]
}
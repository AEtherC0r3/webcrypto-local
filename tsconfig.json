{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2018",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "importHelpers": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "packages/*/build/**/*.d.ts",
        "build/**/*.d.ts"
    ]
}